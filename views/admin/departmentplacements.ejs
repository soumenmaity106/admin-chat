<%- include('../_layouts/adminheader') %>

<%- include('../_layouts/adminsidebar') %>

<!--main-container-part-->
<div id="content">
    <!--breadcrumbs-->
    <div id="content-header">

        <div id="breadcrumb"> <a href="/admin/dashboard" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i>
                Home</a><a href="#" class="current">Center </a> </div>
    </div>
    <!--End-breadcrumbs-->
    <!--Action boxes-->
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <%- include('./message') %>  
                    </div>

                    <div class="widget-box">
                        <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
                            <h5>Data table</h5>
                        </div>
                        <div class="widget-content nopadding">
                            <div style="overflow-x:auto;">
                                <table class="table table-bordered data-table">
                                    <thead>
                                        <tr>
                                            <th>Year</th>
                                            <th>Placement Type</th>
                                            <th>Program</th>
                                            <th>Department</th>
                                            <th>Comments</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% departmentplacements.forEach(function(departmentplacements){ %>
                                        <tr class="gradeX">
                                            <td>
                                                <%= departmentplacements.year %>
                                            </td>
                                            <td>
                                                <%= departmentplacements.placement_type %>
                                            </td>
                                            <td>
                                                <%= departmentplacements.program %>
                                            </td>
                                            <td>
                                                <%= departmentplacements.department %>
                                            </td>
                                            <td>

                                                <p style="width:80px;
                                                overflow: hidden;
                                                text-overflow: ellipsis;
                                                white-space: nowrap;">
                                                    <%= departmentplacements.comments %>
                                                </p>
                                                <button title="<%= departmentplacements.comments %>" type="button"
                                                    class="btn btn-mini resetPrice" data-placement='bottom'>
                                                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                                                </button>
                                            </td>


                                            <td><a class="btn btn-info" href="/admin/departmentplacements/edit-departmentplacements/<%= departmentplacements._id %>"><i
                                                        class="fa fa-pencil" aria-hidden="true"></i></a></td>
                                            <td><a onclick="return confirm('Are you sure you want to delete this item?');" class="confirmdeletion btn btn-danger" href="/admin/departmentplacements/delete-departmentplacements/<%= departmentplacements._id %>"><i
                                                        class="fa fa-trash" aria-hidden="true"></i></a></td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../_layouts/adminfooter') %>
<script>
    
    $('.data-table').dataTable({
        "bJQueryUI": true,
        "sPaginationType": "full_numbers",
        "sDom": '<""l>t<"F"fp>'
    });

</script>