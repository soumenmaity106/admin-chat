<%- include('../_layouts/adminheader') %>

<%- include('../_layouts/adminsidebar') %>

<!--main-container-part-->
<div id="content">
    <!--breadcrumbs-->
    <div id="content-header">

        <div id="breadcrumb"> <a href="/admin/dashboard" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i>
                Home</a><a href="#" class="current">Noticeborad </a> </div>
    </div>
    <!--End-breadcrumbs-->
    <!--Action boxes-->
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
                        
                        <%- include('./message') %>
                    </div>
                    <div class="widget-box">
                        <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
                            <h5>Noticeborad table</h5>
                        </div>
                        <div class="widget-content nopadding">
                            <div style="overflow-x:auto;">
                                <table class="table table-bordered data-table">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Newstype</th>
                                            <th>NewsText</th>
                                            <th>Details</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% noticeborads.forEach(function(noticeborad){ %>
                                        <tr class="gradeX">
                                            <td>
                                                <%= noticeborad.date %>
                                            </td>
                                            <td>
                                                <%= noticeborad.newstype %>
                                            </td>
                                            <td>
                                                <%= noticeborad.newsText %>
                                            </td>
                                            <td>
                                                <%= noticeborad.details %>
                                            </td>

                                            <td><a class="btn btn-info" href="/admin/noticeborad/edit-noticeborad/<%= noticeborad._id %>"><i
                                                        class="fa fa-pencil" aria-hidden="true"></i></a></td>
                                            <td><a onclick="return confirm('Are you sure you want to delete this item?');"
                                                    class="confirmdeletion btn btn-danger" href="/admin/noticeborad/delete-noticeborad/<%= noticeborad._id %>"><i
                                                        class="fa fa-trash" aria-hidden="true"></i></a></td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../_layouts/adminfooter') %>
<script>
    $('.data-table').dataTable({
        "bJQueryUI": true,
        "sPaginationType": "full_numbers",
        "sDom": '<""l>t<"F"fp>'
    });
</script>