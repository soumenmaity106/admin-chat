<%- include('../_layouts/adminheader') %>

<%- include('../_layouts/adminsidebar') %>

<!--main-container-part-->
<div id="content">
    <!--breadcrumbs-->
    <div id="content-header">

        <div id="breadcrumb"> <a href="/admin/dashboard" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i>
                Home</a><a href="#" class="current">Courselists </a> </div>
    </div>
    <!--End-breadcrumbs-->
    <!--Action boxes-->
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <%- include('./message') %>                        
                    </div>
                   
                    <div class="widget-box">
                        <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
                            <h5>Courselist table</h5>
                        </div>
                        <div class="widget-content nopadding">
                            <div style="overflow-x:auto;">
                                <table class="table table-bordered data-table">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>Program</th>
                                            <th>Department</th>
                                            <th>Course Id</th>
                                            <th>Course Name</th>
                                            <th>Course Type</th>
                                            <th>Duration</th>
                                            <th>Degree/Certificate</th>
                                            <th>Degree Awarded</th>
                                            <th>Availability in Campus</th>
                                            <th>Elligibility</th>
                                            <th>Course Brochure</th>
                                            <th>Link</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% courses.forEach(function(course){ %>
                                        <tr class="gradeX">
                                            <td>
                                                <%= course.sno %>
                                            </td>
                                            <td>
                                                <%= course.program %>
                                            </td>
                                            <td>
                                                <%= course.department %>
                                            </td>
                                            <td>
                                                <%= course.courseid %>
                                            </td>
                                            <td>

                                                    <p style="width:80px;
                                                    overflow: hidden;
                                                    text-overflow: ellipsis;
                                                    white-space: nowrap;">
                                                        <%= course.coursename %>
                                                    </p>
                                                    <button title="<%= course.coursename %>" type="button" class="btn btn-mini resetPrice"
                                                        data-placement='bottom'>
                                                        <i class="fa fa-info-circle" aria-hidden="true"></i>
                                                    </button>

                                                
                                            </td>
                                            <td>
                                                <%= course.coursetype %>
                                            </td>
                                            <td>
                                                <%= course.duration %>
                                            </td>
                                            <td>
                                                <%= course.degreecertificatname %>
                                            </td>
                                            <td>
                                                <%= course.degreeawardedby %>
                                            </td>
                                            <td>
                                                <%= course.availabilitycampus %>
                                            </td>
                                            <td>
                                                <p style="width:80px;
                                                overflow: hidden;
                                                text-overflow: ellipsis;
                                                white-space: nowrap;">
                                                    <%= course.elligibility %>
                                                </p>
                                                <button title="<%= course.elligibility %>" type="button" class="btn btn-mini resetPrice"
                                                    data-placement='bottom'>
                                                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                                                </button>
                                            </td>
                                            <td>
                                                <%= course.coursebrochure %>
                                            </td>
                                            <td>
                                                <%= course.link %>
                                            </td>
                                            <td><a class="btn btn-info" href="/admin/courselist/edit-courselist/<%= course._id %>"><i
                                                        class="fa fa-pencil" aria-hidden="true"></i></a></td>
                                            <td><a onclick="return confirm('Are you sure you want to delete this item?');" class="confirmdeletion btn btn-danger" href="/admin/courselist/delete-courselist/<%= course._id %>"><i
                                                        class="fa fa-trash" aria-hidden="true"></i></a></td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>

                    
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../_layouts/adminfooter') %>
<script>
    $('.data-table').dataTable({
        "bJQueryUI": true,
        "sPaginationType": "full_numbers",
        "sDom": '<""l>t<"F"fp>'
    });
</script>